@inject IJSInProcessRuntime JsRuntime
@inherits WebGLComponent
<div id="container" style="position: fixed; opacity: 1; background-color: black; width: 100%; height: 100%">
    <BECanvas width="@Width" Height="@Height" @ref="_canvasReference"></BECanvas>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // Initiate engine first.
        await base.OnAfterRenderAsync(firstRender);

        // Initiate Javascript event hooks.
        if (firstRender)
            JsRuntime.InvokeVoid("InitJavascript", DotNetObjectReference.Create(this));
    }
}