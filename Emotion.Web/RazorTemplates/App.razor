@inject IJSInProcessRuntime JsRuntime
@inherits WebGLComponent
<div id="container" style="background-color: black; height: 100%; opacity: 1; position: fixed; width: 100%;">
    <HTMLCanvas width="@Width" Height="@Height" @ref="_canvasReference"></HTMLCanvas>
</div>

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
    // Initiate Javascript
        if (firstRender)
            JsRuntime.InvokeVoid("InitJavascript", DotNetObjectReference.Create(this));

        await base.OnAfterRenderAsync(firstRender);
    }

}